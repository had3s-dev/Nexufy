{
    "build": {
      "builder": "dockerfile"
    },
    "deploy": {
      "startCommand": "./entrypoint.sh",
      "healthcheckPath": "/",
      "restartPolicyType": "on_failure"
    },
    "volumes": [
      {
        "mountPath": "/downloads",
        "sizeGB": 5
      }
    ],
    "service": {
      "name": "downtify",
      "ports": [
        {
          "protocol": "TCP",
          "port": 8080
        }
      ]
    }
  }
  